{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Key Vault."
            }
        },
        "tenantId": {
            "type": "string",
            "defaultValue": "[subscription().tenantId]",
            "metadata": {
                "description": "The tenant of the Key Vault."
            }
        },
        "objectIds": {
            "type": "array",
            "metadata": {
                "description": "An array of object identifiers that specify which users get permissions on this Key Vault."
            }
        },
        "permissions": {
            "type": "object",
            "defaultValue": {
                "keys": [
                    "Get",
                    "List",
                    "Update",
                    "Create",
                    "Import",
                    "Delete",
                    "Recover",
                    "Backup",
                    "Restore"
                ],
                "secrets": [
                    "Get",
                    "List",
                    "Set",
                    "Delete",
                    "Recover",
                    "Backup",
                    "Restore"
                ],
                "certificates": [
                    "Get",
                    "List",
                    "Update",
                    "Create",
                    "Import",
                    "Delete",
                    "Recover",
                    "Backup",
                    "Restore",
                    "ManageContacts",
                    "ManageIssuers",
                    "GetIssuers",
                    "ListIssuers",
                    "SetIssuers",
                    "DeleteIssuers"
                ]
            },
            "metadata": {
                "description": "The permissions to give to the users, by default this will make them Administrator."
            }
        }
    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/Winvision/azure-arm-templates/master/"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "condition": "[greaterOrEquals(length(parameters('objectIds')), 1)]",
            "apiVersion": "2018-05-01",
            "name": "[concat('accesspolicies-', copyIndex())]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('templateBaseUrl'), 'keyvault-accesspolicy.json')]"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "tenantId": {
                        "value": "[parameters('tenantId')]"
                    },
                    "objectId": {
                        "value": "[parameters('objectIds')[copyIndex()]]"
                    },
                    "permissions": {
                        "value": "[parameters('permissions')]"
                    }
                }
            },
            "copy": {
                "name": "policiesCopy",
                "count": "[length(parameters('objectIds'))]"
            }
        }
    ]
}
